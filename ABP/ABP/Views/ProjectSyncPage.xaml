<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABP.Views.ProjectSyncPage">
<Grid Padding="10">
  <Grid.RowDefinitions>
    <RowDefinition Height="20*" />
    <RowDefinition Height="10*" />
    <RowDefinition Height="30*" />
    <RowDefinition Height="40*" />
  </Grid.RowDefinitions>
  <Label Grid.Row="0" 
         Text="(43) changes waiting to be uploaded"
         VerticalOptions="CenterAndExpand"
         HorizontalOptions="Center"/>
  <Label Grid.Row="1" 
         Text="Last Synced on 20/08/2015 @ 12:33"
         VerticalOptions="CenterAndExpand"
         HorizontalOptions="Center"/>
  <Grid Grid.Row="2">
    <Grid.RowDefinitions>
      <RowDefinition Height="40*"/>
      <RowDefinition Height="60*"/>
    </Grid.RowDefinitions>
    <Button Grid.Row="0"
                Text="Send Changes"
                Clicked="SendChanges_Clicked"/>
    <BoxView Grid.Row="1"/>
  </Grid>
  <Grid Grid.Row="3">
    <Grid.RowDefinitions>
      <RowDefinition Height="40*"/>
      <RowDefinition Height="60*"/>
    </Grid.RowDefinitions>
    <Button Grid.Row="0"
                Text="Sync All"
                Clicked="SyncAll_Clicked"/>
    <BoxView Grid.Row="1"/>
  </Grid>
</Grid>
</ContentPage>