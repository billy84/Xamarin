<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABP.Views.DateSearchFilterPage">
  <TableView Intent="Settings">
    <TableSection>
      <ViewCell>
        <Picker x:Name="cmbProjectNo"
                Title="Select Project No"
                VerticalOptions="Start">
        </Picker>
      </ViewCell>
      <ViewCell>
        <SearchBar Placeholder="Sub-Project No"
                    VerticalOptions="Start"/>
      </ViewCell>
      <ViewCell>
        <SearchBar Placeholder="Delivery Street"
                    VerticalOptions="Start"/>
      </ViewCell>
      <ViewCell>
        <SearchBar Placeholder="Postcode"
                    VerticalOptions="Start"/>
      </ViewCell>
      <ViewCell>
        <Picker x:Name="cmbInstallStatus"
                Title="Install Status"
                VerticalOptions="Start">
        </Picker>
      </ViewCell>
      <ViewCell>
        <Picker x:Name="cmbProgressStatus"
                Title="Progress Status"
                VerticalOptions="Start">
        </Picker>
      </ViewCell>
      <ViewCell>
        <DatePicker x:Name="cmbTimePicker" 
                    Format="D"
                    VerticalOptions="CenterAndExpand"/>
      </ViewCell>
      <ViewCell>
        <Picker x:Name="cmbSurveyedStatus" 
                Title="Not Surveyed"
                VerticalOptions="Start">
        </Picker>
      </ViewCell>
      <ViewCell>
        <Picker x:Name="cmbConfirmed"
                Title="Any"
                VerticalOptions="Start">
        </Picker>
      </ViewCell>
      <ViewCell>
        <Picker Title="Any"
      VerticalOptions="Start">
          <Picker.Items>
            <x:String>Any</x:String>
            <x:String>Yes</x:String>
            <x:String>No</x:String>
          </Picker.Items>
        </Picker>
      </ViewCell>
      <ViewCell>
        <Picker Title="Any"
      VerticalOptions="Start">
          <Picker.Items>
            <x:String>Any</x:String>
            <x:String>Yes</x:String>
            <x:String>No</x:String>
          </Picker.Items>
        </Picker>
      </ViewCell>
      <ViewCell>
        <Picker Title="AnyA"
      VerticalOptions="Start">
          <Picker.Items>
            <x:String>Any</x:String>
            <x:String>Yes</x:String>
            <x:String>No</x:String>
          </Picker.Items>
        </Picker>
      </ViewCell>
    </TableSection>
  </TableView>
</ContentPage>