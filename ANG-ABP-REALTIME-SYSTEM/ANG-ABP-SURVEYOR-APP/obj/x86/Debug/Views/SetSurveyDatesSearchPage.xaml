<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ANG_ABP_SURVEYOR_APP"
    xmlns:common="using:ANG_ABP_SURVEYOR_APP.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:DatePicker="using:DatePicker"
    x:Name="pageRoot"
    x:Class="ANG_ABP_SURVEYOR_APP.SetSurveyDatesSearchPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Survey Dates</x:String>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid x:Name="ghHeader">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
				Style="{StaticResource NavigationBackButtonNormalStyle}"
				VerticalAlignment="Top"
				AutomationProperties.Name="Back"
				AutomationProperties.AutomationId="BackButton"
				AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="Survey Dates" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
				IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>



        <Grid Margin="10,10,0,10" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105*"/>
                <ColumnDefinition Width="105*"/>
                <ColumnDefinition Width="160*"/>
                <ColumnDefinition Width="120*"/>
                <ColumnDefinition Width="190*"/>
                <ColumnDefinition Width="190*"/>
                <ColumnDefinition Width="220*"/>
                <ColumnDefinition Width="160*"/>
                <ColumnDefinition Width="116*"/>
                <ColumnDefinition Width="58*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="17*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="220*"/>
                <RowDefinition Height="25*"/>

            </Grid.RowDefinitions>
            <TextBlock Margin="2,0,8,10" TextWrapping="Wrap" Text="Delivery Street" FontSize="20" TextAlignment="Center" Grid.Column="2"/>
            <CheckBox x:ConnectionId='4' x:Name="chkUseSurveyPlanDate" Content="Use Survey Plan Date" Grid.Column="6" Margin="7,-1,5,6" VerticalAlignment="Stretch" FontSize="17" IsChecked="False"                                                                                   TabIndex="4"/>
            <TextBlock Margin="10,2,5,8" TextWrapping="Wrap" Text="Surveyed Status" FontSize="20" TextAlignment="Center" Grid.Column="7"/>
            <TextBlock Margin="0,0,0,10" TextWrapping="Wrap" Text="Confirmed" FontSize="20" TextAlignment="Center" Grid.Column="8"/>
            <ComboBox x:ConnectionId='5' x:Name="cmbProjectNo" Margin="0,4,2,7" Grid.Row="1" FontSize="20"                                                  TabIndex="0" Grid.ColumnSpan="2"/>
            <TextBox x:ConnectionId='6' x:Name="txtSubProjectNoFilter" Margin="0,3,0,10" Grid.Row="1" Grid.ColumnSpan="2"                                                 FontSize="20" Visibility="Collapsed" />

            <TextBox x:ConnectionId='7' x:Name="txtDeliveryStreet" Grid.Column="2" Margin="0,3,2,8" Grid.Row="1" TextWrapping="Wrap" FontSize="20"                                             TabIndex="1"/>
            <ComboBox x:ConnectionId='8' x:Name="cmbInstallStatus" Margin="0,3,2,8" Grid.Row="1" FontSize="17" Grid.Column="4"                                                      TabIndex="3"/>
            <ComboBox x:ConnectionId='9' x:Name="cmbSurveyedStatus" Margin="0,2,2,9" Grid.Row="1" FontSize="17" Grid.Column="7"                                                       TabIndex="6"/>
            <ComboBox x:ConnectionId='10' x:Name="cmbConfirmed" Margin="0,2,2,9" FontSize="17" Grid.Column="8"                                                  Grid.Row="1" TabIndex="7"/>
            <Button x:ConnectionId='11' x:Name="btnSetSurveyDate" Content="Mon 26/05/2014" Grid.Column="6" HorizontalAlignment="Stretch" Margin="-3,30,-3,5" VerticalAlignment="Stretch" FontSize="20"                                TabIndex="5" Grid.RowSpan="2"/>

            <ListView x:ConnectionId='12' x:Name="lvResults" Margin="0,12,10,10" Grid.Row="2" Grid.ColumnSpan="10" SelectionMode="Multiple" TabIndex="8" ScrollViewer.VerticalScrollBarVisibility="Visible"                                              >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="{Binding ScreenWidth}" Height="40" VerticalAlignment="Stretch" Background="{Binding BackgroundColour}" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12*"/>
                                <ColumnDefinition Width="9*"/>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="11*"/>
                                <ColumnDefinition Width="11*"/>
                                <ColumnDefinition Width="13*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="3*"/>

                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding SubProjectNo}" FontSize="17" ToolTipService.Placement="Right"  >
                                <ToolTipService.ToolTip>
                                    <StackPanel>
                                        
                                        <TextBlock MinWidth="150" 
                                            Text="{Binding ToolTipText}"
                                            FontSize="17" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </ToolTipService.ToolTip>
                                
                            </TextBlock>
                            <TextBlock Grid.Column="1" Text="{Binding DeliveryStreet}" FontSize="17" Width="{Binding StreetWidth}" />
                            <TextBlock Grid.Column="2" Text="{Binding DlvZipCode}" TextAlignment="Left" FontSize="17" Width="{Binding PostcodeWidth}" />
                            <TextBlock Grid.Column="3" Text="{Binding InstallStatusName}" FontSize="17" Width="{Binding InstallWidth}" />
                            <TextBlock Grid.Column="4" Text="{Binding ProgressStatusName}" FontSize="17" Width="{Binding ProgressWidth}" />
                            <TextBlock Grid.Column="5" Text="{Binding SurveyDisplayDateTime}" FontSize="17" />
                            <TextBlock Grid.Column="6" Text="{Binding SurveyedStatus}" FontSize="17" />
                            <TextBlock Grid.Column="7" Text="{Binding Confirmed}" FontSize="17" />
                            <TextBlock Grid.Column="8" Text="{Binding Flags}" FontSize="17" />


                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>


            <TextBlock Margin="10,0,10,10" TextWrapping="Wrap" Text="Postcode" FontSize="20" TextAlignment="Center" Grid.Column="3"/>
            <TextBox x:ConnectionId='13' x:Name="txtPostcode" Grid.Column="3" Margin="0,3,2,8" Grid.Row="1" TextWrapping="Wrap" FontSize="20"                                       TabIndex="2"/>
            <Button x:ConnectionId='14' x:Name="btnOptimizeOrder" Content="Optimise visit order" HorizontalAlignment="Stretch" Margin="7,7,5,0" Grid.Row="3" VerticalAlignment="Stretch" Grid.Column="6" RenderTransformOrigin="0.534,0.772"                             Visibility="Collapsed"/>


            <Grid Margin="0,0,10,0" Grid.Row="3" Grid.ColumnSpan="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105*"/>
                    <ColumnDefinition Width="125*"/>
                    <ColumnDefinition Width="152*"/>
                    <ColumnDefinition Width="152*"/>
                    <ColumnDefinition Width="132*"/>
                    <ColumnDefinition Width="133*"/>
                    <ColumnDefinition Width="132*"/>
                    <ColumnDefinition Width="170*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="190*"/>


                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <Button x:ConnectionId='18' x:Name="btnSelectAll" Grid.Column="0" Content="Select All" HorizontalAlignment="Stretch" Margin="3,1,-2,7" VerticalAlignment="Stretch"                            TabIndex="9" Grid.RowSpan="2" />
                <Button x:ConnectionId='19' x:Name="btnDeSelectAll" Grid.Column="1" Content="DeSelect All" HorizontalAlignment="Stretch" Margin="-2,1,2,7" VerticalAlignment="Stretch"                               TabIndex="10" Grid.RowSpan="2"/>
                <Button x:ConnectionId='20' x:Name="btnSetSurveyDates" Content="Set Survey Dates" HorizontalAlignment="Stretch" Margin="-3,1,-3,7" VerticalAlignment="Stretch" Grid.Column="3"                                 TabIndex="11" Grid.RowSpan="2"/>
                <Button x:ConnectionId='21' x:Name="btnUnConfirmSurveys" Content="UnConfirm" HorizontalAlignment="Stretch" Margin="0,1,-3,7" VerticalAlignment="Stretch" Grid.Column="4" RenderTransformOrigin="0.534,0.772"                                   TabIndex="12" Grid.RowSpan="2"/>
                <Button x:ConnectionId='22' x:Name="btnEditSurvey" Content="Edit Survey" HorizontalAlignment="Stretch" Margin="3,1,-1,7" VerticalAlignment="Stretch" Grid.Column="5" RenderTransformOrigin="0.534,0.772"                             TabIndex="12" Grid.RowSpan="2"/>
                <Button x:ConnectionId='23' x:Name="btnViewOnMap" Content="View on map" HorizontalAlignment="Stretch" Margin="0,1,-3,7" VerticalAlignment="Stretch" Grid.Column="6" RenderTransformOrigin="0.534,0.772"                            TabIndex="13" Grid.RowSpan="2"/>


                <CheckBox x:ConnectionId='24' x:Name="chkShowAllStatuses" Content="Show All Statuses" Grid.Column="7" Margin="6,2,5,-1" VerticalAlignment="Stretch" FlowDirection="RightToLeft" FontSize="14"                                                                               TabIndex="14" Grid.Row="1" IsChecked="True"/>
                <CheckBox x:ConnectionId='25' x:Name="chkShowAllProgessStatus" Content="All Progress Statuses" Grid.Column="8" Margin="5,3,0,-2" VerticalAlignment="Stretch" FlowDirection="RightToLeft" FontSize="14"                                                                                         TabIndex="14" Grid.Row="1" IsChecked="True"/>
                <CheckBox x:ConnectionId='26' x:Name="chkSyncChangesOnly" Content="Sync Changes Only" Grid.Column="9" Margin="3,1,8,0" VerticalAlignment="Stretch" FlowDirection="RightToLeft" FontSize="14"                                                                               TabIndex="14" Grid.Row="1"/>



                <TextBlock x:Name="tbSelectedCount" Grid.Column="9" Margin="10,0,10,1" TextWrapping="Wrap" Text="0 Listed" TextAlignment="Center" FontSize="17"/>
                <TextBlock x:Name="tbSubProjectCount" Grid.Column="7" Margin="10,0" TextWrapping="Wrap" Text="0 Listed" TextAlignment="Center" FontSize="17" Grid.ColumnSpan="2"/>
                <Button x:ConnectionId='27' x:Name="btnWorkType" Grid.Column="2" Content="Set Repl Type" HorizontalAlignment="Stretch" Margin="-1,1,7,7" VerticalAlignment="Stretch"                            TabIndex="10" Grid.RowSpan="2">

                    <Button.Flyout>
                        <Flyout x:Name="foWorkType" Placement="Bottom" >

                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="ScrollViewer.ZoomMode" Value="Enabled"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="DarkGray"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="MinHeight" Value="175"/>
                                    <Setter Property="MinWidth" Value="600"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </Flyout.FlyoutPresenterStyle>

                            <Grid Background="LightGray" MinHeight="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="150" Width="550" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>

                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="12*"/>

                                </Grid.RowDefinitions>
                                <Button x:ConnectionId='28' x:Name="btnUpdateWorkType" Content="Update Work Type" HorizontalAlignment="Stretch" Margin="5,10,9,10" Grid.Row="2" VerticalAlignment="Stretch"                                 FontSize="24"/>
                                <TextBox x:Name="txtWorkType" FontSize="24" Grid.Row="0"/>

                            </Grid>
                        </Flyout>

                    </Button.Flyout>


                </Button>
            </Grid>
            <ComboBox x:ConnectionId='15' x:Name="cmbProjectNoFilter" Margin="-1,-15,1,4" FontSize="20"                                                        TabIndex="0" Background="#CCE6DEDE" Grid.ColumnSpan="2"/>
            <TextBlock Margin="2,4,10,6" TextWrapping="Wrap" Text="Progress Status" FontSize="20" TextAlignment="Center" Grid.Column="5"/>
            <ComboBox x:ConnectionId='16' x:Name="cmbProgressStatus" Margin="0,3,2,8" Grid.Row="1" FontSize="17" Grid.Column="5"                                                       TabIndex="3"/>
            <ComboBox x:ConnectionId='17' x:Name="cmbInstallFilterType" Grid.Column="4" Margin="4,0,5,4" FontSize="16"                                                         >
                <ComboBoxItem Content="Replacement Type" IsSelected="True"/>
                <ComboBoxItem Content="Install Status"/>
            </ComboBox>


        </Grid>
        <Popup x:Name="LightDismissAnimatedPopup" 
               HorizontalOffset="750" Grid.Row="1"
              
               VerticalOffset="100" IsLightDismissEnabled="True">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PopupThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                    BorderThickness="2,2,2,2" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" 
                    Width="330" Height="450">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Select Date" FontSize="24.667" HorizontalAlignment="Center" />
                    <DatePicker:DatePicker Name="dtPicker" Value="{Binding CurrentDateTime, Mode=TwoWay}"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Height="350"  >
                    </DatePicker:DatePicker>
                    <Grid HorizontalAlignment="Stretch" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button x:ConnectionId='3' x:Name="btnUseSearchDate" Grid.Column="0" Content="Use Date"                                HorizontalAlignment="Stretch" Margin="7,0" VerticalAlignment="Stretch" FontSize="20" />
                        <ComboBox x:Name="cmbDateCompare" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="20"/>

                    </Grid>
                </StackPanel>
            </Border>
        </Popup>


        <Popup x:Name="SetTheSurveyDatesPopup" 
              HorizontalOffset="400" Grid.Row="1"
              
               VerticalOffset="150"
              
              IsLightDismissEnabled="True" Height="600">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PopupThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>



                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                    BorderThickness="2,2,0,2" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" 
                     Grid.Row="0" Grid.Column="0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                        <DatePicker:DatePicker Name="dtPickerSurveyDate" Value="{Binding CurrentDateTime, Mode=TwoWay}"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Height="350"  >
                        </DatePicker:DatePicker>

                    </StackPanel>
                </Border>


                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                    BorderThickness="0,2,2,2" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" 
                     Grid.Row="0" Grid.Column="1">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>

                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="14*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>

                        </Grid.RowDefinitions>

                        <TextBlock Text="" FontSize="24.667" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" />

                        <ComboBox x:ConnectionId='2' x:Name="cmbTimePicker" Grid.Row="1"                                                    HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="220"/>

                        <TimePicker Name="tpSurveyTime" Grid.Row="1" FontSize="20"  HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    </Grid>

                </Border>

                <TextBlock Grid.Column="0" Grid.ColumnSpan="2"  Text="Select survey date \ time" FontSize="24.667" HorizontalAlignment="Stretch" VerticalAlignment="Top" TextAlignment="Center" />
                <Button x:ConnectionId='1' x:Name="btnApplySurveyDate" Grid.Column="1" Grid.ColumnSpan="2"  Content="Use selected date \ time"                                  HorizontalAlignment="Stretch"  Margin="31,0,27,0" VerticalAlignment="Bottom" FontSize="20" />

            </Grid>

        </Popup>


    </Grid>
</Page>

