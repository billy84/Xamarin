<Page
    x:Name="pageRoot"
    xmlns:DatePicker="using:DatePicker"
    x:Class="ANG_ABP_SURVEYOR_APP.Views.SetSurveyDatesEditPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ANG_ABP_SURVEYOR_APP.Views"
    xmlns:common="using:ANG_ABP_SURVEYOR_APP.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Set Survey Details</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='8' x:Name="backButton" Margin="39,59,39,0"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"                         />
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <Grid Margin="10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="15*"/>


            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>

            </Grid.RowDefinitions>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Sub-project ID:" FontSize="24"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Survey Plan Date:" FontSize="24" Grid.Row="1"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Street Name:" FontSize="24" Grid.Row="2"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Resident Telephone:" FontSize="24" Grid.Row="3"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Alt Contact Name:" FontSize="24" Grid.Row="4"/>
            <TextBlock Margin="10,10,10,9" TextWrapping="Wrap" Text="Alt Contact Mob No:" FontSize="24" Grid.Row="5"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Install Status:" FontSize="24" Grid.Row="6"/>
            <TextBlock Margin="10,10,10,9" TextWrapping="Wrap" Text="Progress Status:" FontSize="24" Grid.Row="7"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Resident Name:" FontSize="24" Grid.Row="2" Grid.Column="2"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Resident Mobile No:" FontSize="24" Grid.Row="3" Grid.Column="2"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Alt Contact Tel No:" FontSize="24" Grid.Row="4" Grid.Column="2"/>
            <TextBlock Margin="10,10,10,9" TextWrapping="Wrap" Text="Replacement Type:" FontSize="24" Grid.Row="5" Grid.Column="2"/>
            <TextBlock Margin="10,10,220,10" TextWrapping="Wrap" Text="Door Choice Form Received:" FontSize="24" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2"/>
            <TextBlock Margin="10,9,10,10" TextWrapping="Wrap" Text="Add Note Text:" FontSize="24" Grid.Row="7" Grid.Column="2"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Sub-project Name:" FontSize="24" Grid.Column="2"/>
            <TextBlock x:Name="tbSubProjectID" Margin="10" TextWrapping="Wrap" Text="Sub-project ID" FontSize="24" Grid.Column="1"/>
            <TextBlock x:Name="tbSubProjectName" Margin="10" TextWrapping="Wrap" Text="Sub-project Iname" FontSize="24" Grid.Column="3"/>
            <TextBlock x:Name="tbSurveyPlanDate" Margin="10" TextWrapping="Wrap" Text="Survey Plan Date" FontSize="24" Grid.Column="1" Grid.Row="1"/>
            <Button x:ConnectionId='3' x:Name="btnSetSurveyPlanDate" Content="Set survey plan date." Grid.Column="2" HorizontalAlignment="Stretch" Margin="7,6,7,0" Grid.Row="1" VerticalAlignment="Top"                                   />
            <ComboBox x:Name="cmbInstallStatus" Grid.Column="1" Margin="10,6,33,7" Grid.Row="6" IsEnabled="False" FontSize="20" Height="34"/>
            <ComboBox x:Name="cmbProgressStatus" Grid.Column="1" Margin="10,7,33,6" Grid.Row="7" FontSize="20" Height="34"/>
            <TextBox x:Name="txtStreetName" Grid.Column="1" Margin="10,4,10,3" Grid.Row="2" TextWrapping="Wrap" MaxLength="250" FontSize="17" Height="38" VerticalContentAlignment="Stretch"/>
            <TextBox x:Name="txtResidentName" Grid.Column="3" Margin="10,4,10,5" Grid.Row="2" TextWrapping="Wrap" MaxLength="100" FontSize="17" Height="38" VerticalContentAlignment="Stretch"/>
            <TextBox x:Name="txtResidentTelNo" Grid.Column="1" Margin="10,5,10,4" Grid.Row="3" TextWrapping="Wrap" MaxLength="50" FontSize="17" InputScope="TelephoneNumber" Height="38" VerticalContentAlignment="Stretch" />
            <TextBox x:Name="txtResidentMobNo" Grid.Column="3" Margin="10,5,10,4" Grid.Row="3" TextWrapping="Wrap" MaxLength="50" FontSize="17" InputScope="TelephoneNumber" Height="38" VerticalContentAlignment="Stretch"/>
            <TextBox x:Name="txtAltContactName" Grid.Column="1" Margin="10,5,10,4" Grid.Row="4" TextWrapping="Wrap" MaxLength="100" FontSize="17" Height="38" VerticalContentAlignment="Stretch"/>
            <TextBox x:Name="txtAltContactTelNo" Grid.Column="3" Margin="10,5,10,4" Grid.Row="4" TextWrapping="Wrap" MaxLength="50" FontSize="17" InputScope="TelephoneNumber" Height="38" VerticalContentAlignment="Stretch"/>
            <TextBox x:Name="txtAltContactMobNo" Grid.Column="1" Margin="10,4,10,5" Grid.Row="5" TextWrapping="Wrap" MaxLength="50" FontSize="17" InputScope="TelephoneNumber" Height="38" VerticalContentAlignment="Stretch"/>
            <TextBox x:Name="txtReplacementType" Grid.Column="3" Margin="10,4,10,5" Grid.Row="5" TextWrapping="Wrap" MaxLength="9999" FontSize="17" Height="38" VerticalContentAlignment="Stretch"/>
            <ComboBox x:Name="cmbDoorChoiceFormReceived" Grid.Column="3" Margin="183,6,10,7" Grid.Row="6" FontSize="20" Height="34"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Last AX Update:" FontSize="24" Grid.Row="11"/>
            <TextBlock x:Name="tbLastUpdate" Margin="10" TextWrapping="Wrap" Text="Last Update:" FontSize="24" Grid.Row="11" Grid.Column="1"/>
            <ComboBox x:ConnectionId='4' x:Name="cmbNotes" Grid.Column="3" Margin="10,6,10,7" Grid.Row="7" FontSize="20"                                              Height="34"/>
            <Button x:ConnectionId='5' x:Name="btnUpdateSurvey" Content="Update survey." Grid.Column="1" HorizontalAlignment="Stretch" Margin="231,0,361,-3" Grid.Row="12" VerticalAlignment="Stretch" Grid.ColumnSpan="3" FontSize="20"                              />
            <TextBox x:Name="txtOtherNotes" Grid.Column="2" Grid.Row="9" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Visible" FontSize="18" IsSpellCheckEnabled="True"/>
            <Button x:ConnectionId='6' x:Name="btnViewNotesHistory" Content="View Notes History" Grid.Column="3" HorizontalAlignment="Stretch" Margin="7,3,7,0" Grid.Row="8" VerticalAlignment="Stretch"                                  />
            <TextBlock Margin="10,10,10,5" TextWrapping="Wrap" Text="Special Resident Note:" FontSize="24" Grid.Row="8"/>
            <TextBox x:Name="txtSpecialResidentNote" HorizontalAlignment="Left" Grid.Row="8" TextWrapping="Wrap" VerticalAlignment="Top" Height="117" Grid.RowSpan="3" Width="384" Margin="10,10,0,0" Grid.Column="1" MaxLength="500" AcceptsReturn="True" FontSize="18" IsSpellCheckEnabled="True"/>
            <TextBlock x:Name="tbUpdatesPending" Margin="10,10,198,9" TextWrapping="Wrap" Text="4 fields changed, waiting to be uploaded." FontSize="24" Grid.Row="12" Grid.ColumnSpan="2"/>
            <Button x:ConnectionId='7' x:Name="btnUnConfirmSurvey" Content="UnConfirm Survey" Grid.Column="3" HorizontalAlignment="Stretch" Margin="7,6,188,0" Grid.Row="1" VerticalAlignment="Top"                                  Visibility="Collapsed"/>

        </Grid>

        <Popup x:Name="SetTheSurveyDatesPopup" 
              HorizontalOffset="400" Grid.Row="1"
              
               VerticalOffset="150"
              
              IsLightDismissEnabled="True" Height="600">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PopupThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                    BorderThickness="2,2,0,2" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" 
                     Grid.Row="0" Grid.Column="0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                        <DatePicker:DatePicker Name="dtPickerSurveyDate" Value="{Binding CurrentDateTime, Mode=TwoWay}"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Height="350"  >
                        </DatePicker:DatePicker>

                    </StackPanel>
                </Border>


                <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                    BorderThickness="0,2,2,2" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" 
                     Grid.Row="0" Grid.Column="1">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>

                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="14*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>

                        </Grid.RowDefinitions>

                        <TextBlock Text="" FontSize="24.667" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" />

                        <ComboBox x:ConnectionId='2' x:Name="cmbTimePicker" Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="220"                                                  />

                        <TimePicker Name="tpSurveyTime" Grid.Row="1" FontSize="22"  HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    </Grid>

                </Border>

                <TextBlock Grid.Column="0" Grid.ColumnSpan="2"  Text="Select survey date \ time" FontSize="24.667" HorizontalAlignment="Stretch" VerticalAlignment="Top" TextAlignment="Center" />
                <Button x:ConnectionId='1' x:Name="btnApplySurveyDate" Grid.Column="1" Grid.ColumnSpan="2"  Content="Use selected date \ time" HorizontalAlignment="Stretch"  Margin="31,0,27,0" VerticalAlignment="Bottom" FontSize="20"                                  />

            </Grid>

        </Popup>


        <Popup x:Name="NotesHistoryPopup"
              IsLightDismissEnabled="True" VerticalOffset="50">

            <Grid x:Name="gdNotesPopupGrid" Width="800" Height="500"  Background="#FFE5E5E5" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" >

                <ListView x:Name="lvNotes" Margin="0,10,-13,0" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid  Width="800" MinHeight="50" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="#FF3A3838" >

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="10*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*"/>
                                    <ColumnDefinition Width="10*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding UserName}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="22" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1"  MinHeight="50" />
                                <TextBlock Text="{Binding InputDateTime}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="22" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1"  MinHeight="50" />
                                <TextBlock Text="{Binding NoteText}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="22" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="WrapWholeWords"  MinHeight="50" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </Grid>

        </Popup>

    </Grid>

</Page>

