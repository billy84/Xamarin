<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABP.Surveyor.Views.MainMenuView">
  <Grid Padding="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="18*"/>
      <RowDefinition Height="18*"/>
      <RowDefinition Height="18*"/>
      <RowDefinition Height="18*"/>
      <RowDefinition Height="18*"/>
      <RowDefinition Height="10*"/>
    </Grid.RowDefinitions>
    <BoxView Grid.Row="0"/>
    <Button Grid.Row="1"
            Text="Set Survey Dates"
            Clicked="GotoDateSearchFilterView"/>
    <Button Grid.Row="2"
            Text="Set Survey Dates"/>
    <BoxView Grid.Row="3"/>
    <BoxView Grid.Row="4"/>
    <Grid Grid.Row="5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="23*"/>
        <ColumnDefinition Width="18*"/>
        <ColumnDefinition Width="18*"/>
        <ColumnDefinition Width="18*"/>
        <ColumnDefinition Width="23*"/>
      </Grid.ColumnDefinitions>
      <BoxView Grid.Column="0"/>
      <Image Grid.Column="1"
             Source="down.png"
             BackgroundColor="Transparent"/>
      <Image Grid.Column="2"
             Source="refresh.png"
             BackgroundColor="Transparent"/>
      <Image Grid.Column="3"
             Source="configuration.png"
             BackgroundColor="Transparent"/>
      <BoxView Grid.Column="4"/>
    </Grid>
  </Grid>  
</ContentPage>